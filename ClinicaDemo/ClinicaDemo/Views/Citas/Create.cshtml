@model ClinicaDemo.Models.Cita
@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<div class=" col-md-12">
    <div class=" card">
        <div class=" card-header text-center">
            <h5> Crear Cita</h5>
        </div>
        <div class=" card-body text-center">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label for="idPaciente" class="col-form-label col-auto"><i class="oi oi-people"></i> Seleccione un Paciente:</label>
                    <div class="col-auto">
                        <div class="input-group">
                            <select asp-for="IdPaciente" asp-items="ViewBag.Pacientes" class="form-control"></select>                            
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="idDoctor" class="col-form-label col-auto"><i class="oi oi-people"></i> Seleccione un Doctor:</label>
                    <div class="col-auto">
                        <div class="input-group">
                            <select asp-for="IdDoctor" asp-items="ViewBag.Medicos" class="form-control"></select>                         
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label>Fecha </label>
                    <input asp-for="FechaCita" type="date" class="form-control" placeholder="Fecha" />
                    <span asp-validation-for="FechaCita" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Fecha </label>
                    <input asp-for="HoraCita" type="time" class="form-control" placeholder="Hora" />
                    <span asp-validation-for="HoraCita" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label></label>
                    <textarea asp-for="Motivo" class="form-control" placeholder="Motivo"></textarea>
                    <span asp-validation-for="Motivo" class="text-danger"></span>
                </div>                
                <div class=" card-footer ">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Guardar</button>
                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="fa fa-ban"></i> Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


